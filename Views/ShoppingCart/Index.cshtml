@model olashop.Models.CartItemsVM
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<div class=" row">

        <table class="table table-light">
            <thead class="thead-light">
                <tr>
                    <th>#</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Cart.CartItems)
                {
                <tr>
                    <td>@item.Product.Name</td>
                    <td>@item.Quantity</td>
                    <td>@item.Product.Price EGP</td>
                    <td>@((item.Quantity * item.Product.Price))</td>
                    <td ><a class="btn btn-danger" asp-controller="ShoppingCart" asp-action="RemovefromCart" asp-route-id="@item.Product.Id">Remove</a></td>
                </tr>
                }

            </tbody>
            <tfoot>
                <tr>
                    <th colspan="3">Total</th>
                    <th>@Model.totalitemprice</th>
                </tr>
            </tfoot>
        </table>

</div>

