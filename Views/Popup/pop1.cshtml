@{
    if (ViewBag.pro != null)
    {
        <div class="row">
            <h3 class="col-12">
                @ViewBag.pro.Name
                <a>Exit</a>
            </h3>
            <hr />
            <img class="col-md-3" src="~/uploads/@ViewBag.pro.ImgUrl" />
            <div class="col-12 col-md-6">
                <div class="row">
                    <h4 class="col-12">@ViewBag.pro.Price EGP</h4>
                    <hr />
                    <p class="col-12">
                        @ViewBag.pro.Description
                    </p>
                </div>
            </div>
            <div class="col-12 col-md-3">
                <a class="btn btn-success" asp-controller="Cart" asp-action="AddToMyCart" asp-route-id="@ViewBag.pro.Id">Add to Cart</a>
            </div>

        </div>
    }
    else
    {
        <div class="row">
            <h3 class="col-12">
                please select
            </h3>



        </div>
    }
}