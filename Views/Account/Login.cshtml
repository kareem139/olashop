@model olashop.Viewmodels.LoginVM
@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    #bgimg{
        background-image:url('/image.jfif');
        background-size:cover;
        background-position:center center;
    }
    .mh-100vh {
  min-height: 50vh;
}

#login-block {
  -webkit-box-shadow: 0px 0px 45px 0px rgba(0,0,0,0.4);
  -moz-box-shadow: 0px 0px 45px 0px rgba(0,0,0,0.4);
  box-shadow: 0px 0px 45px 0px rgba(0,0,0,0.4);
  z-index: 2;
}


#bg-block { background-image: url('/image.jfif'); background-size: cover; background-position: center center; }
    #login-block {
        max-width: fit-content;
        margin: auto;
        height: 70vh;
    }


</style>


    <div class="row mh-100vh">
        
        <div class="col-4 col-sm-12 col-md-12 col-lg-12 offset-1  offset-md-3 offset-lg-0 align-self-center d-lg-flex align-items-lg-center align-items-md-center align-self-lg-stretch bg-white p-5 rounded rounded-lg-0 my-5 my-lg-0" id="login-block">
            <div class="m-auto w-lg-75 w-xl-50">
                <h2 class="text-info font-weight-light mb-5"><i class="bi-person-plus"></i>   <span style="color: rgb(235,21,21);">KAR</span><span style="font-size: 22px;">film</span></h2>
                <form asp-controller="Account" asp-action="Login" class="col-6" >
                    <div class="form-group">
                        <label asp-for="UserName"></label>
                        <input asp-for="UserName" />
                        <span asp-validation-for="UserName"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Password"></label>
                        <input asp-for="Password" type="password" id="pass"/><span><i class="far fa-eye-slash" id="viewpass" onclick="vwpass()"></i></span>
                        <span asp-validation-for="Password"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" class=" btn btn-success" value="Login" />
                    </div>
                </form>
                <p class="mt-3 mb-0"><a class="text-info small" href="#">Forgot your email or password?</a></p>
                <a class="already" asp-controller="Account" asp-action="Register">Create New account? Sign up here.</a>
            </div>
        </div>
        
    </div>


@section Scripts {
        <script>
            function mycomplete(data) {
                alert("my success");
            }
            var bb = true;

            if (bb)
            {
                function vwpass() {
                    $('#pass').click().attr("type", "text");
                    $('#viewpass').removeClass();
                    $('#viewpass').addClass("far fa-eye");
                    bb = false;
                }
            }
            else {
                function vwpass() {
                    $('#pass').click().attr("type", "password");
                    $('#viewpass').removeClass();
                    $('#viewpass').addClass("far fa-eye-slash");
                }
            }
       
        </script>
}